!!!
%html
  %head
    %title BeagleNsupdate
    = stylesheet_link_tag 'import'
    = stylesheet_link_tag 'blueprint/screen'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #wrapper
      = render "shared/header"
      #contents
        - if user_signed_in?
          #sub
            %h2= "Sub Contents"
            = render "shared/navigation"
        %p#notice= notice
        %p#alert= alert
        #main
          = yield
      = render "shared/footer"
